{
  "name": "@sineai/drug-safety-mcp",
  "version": "1.0.0",
  "description": "drug-safety-mcp MCP server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:remote": "MCP_MODE=remote node dist/index.js",
    "docker:build": "docker build -t sineai/drug-safety-mcp .",
    "docker:run": "docker run -p 3000:3000 --env-file .env sineai/drug-safety-mcp",
    "deploy": "bash deploy.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "update:core": "npm update @sineai/mcp-core"
  },
  "dependencies": {
    "@sineai/mcp-core": "^1.0.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "tsx": "^4.0.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}